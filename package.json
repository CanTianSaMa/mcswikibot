{
  "name": "koishi-boilerplate",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "koishi-scripts build",
    "clean": "koishi-scripts clean",
    "new": "koishi-scripts new",
    "setup": "koishi-scripts setup",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "dev": "cross-env NODE_ENV=development koishi start -r esbuild-register -r yml-register --watch",
    "start": "koishi start"
  },
  "devDependencies": {
    "@koishijs/client": "^3.3.2",
    "@koishijs/scripts": "^1.3.2",
    "@types/node": "^17.0.31",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "typescript": "^4.6.4",
    "yml-register": "^1.0.0",
    "yakumo": "^0.2.4",
    "yakumo-publish": "^0.2.2",
    "yakumo-upgrade": "^0.2.2",
    "yakumo-version": "^0.2.3"
  },
  "dependencies": {
    "@koishijs/cli": "^4.7.1",
    "@koishijs/plugin-adapter-discord": "^2.1.1",
    "@koishijs/plugin-adapter-onebot": "^4.2.4",
    "@koishijs/plugin-adapter-telegram": "^2.2.6",
    "@koishijs/plugin-console": "^3.3.2",
    "@koishijs/plugin-dataview": "^1.2.4",
    "@koishijs/plugin-logger": "^1.2.2",
    "@koishijs/plugin-manager": "^1.8.2",
    "@koishijs/plugin-sandbox": "^1.1.3",
    "@koishijs/plugin-status": "^5.4.0",
    "koishi": "^4.7.1"
  },
  "yakumo": {
    "require": [
      "esbuild-register",
      "yml-register"
    ]
  }
}